<table class="ui celled table">
  <thead>
    <tr>
      <th>Weight</th>
      <th>Chest</th>
      <th>Thigh</th>
      <th>Upperarm</th>
      <th>Waist</th>
      <th>Hips</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
    {{#each member.assessments}}
      <tr>
        <td>
          {{weight}}
        </td>
        <td>
          {{chest}}
        </td>
        <td>
          {{thigh}}
        </td>
        <td>
          {{upperarm}}
        </td>
        <td>
          {{waist}}
        </td>
        <td>
          {{hips}}
        </td>
        <td>
          {{comment}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<h4 class="ui headder">
    Comments
  </h4>
  <form class="ui form" action="/editcomment/${assessment.id}" method="POST">
    <div class="ui field">
      <textarea rows="2" name="comment"> {{member.assessments.comment}} </textarea>
    </div>
    <button class="ui blue submit button"> Update </button>
  </form>