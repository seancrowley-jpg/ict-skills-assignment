<section class="ui segment">
    <div class="ui four statistics">
        <div class="statistic">
            <h2 class="ui header">
                <i class="big user icon"></i>
                <div class="content">
                {{member.name}}
                    <div class="sub header">Height: {{member.height}} m</div>
                </div>
            </h2>
        </div>
      <div class="statistic">
            <h2 class="ui header">
                <i class="big heartbeat icon"></i>
                <div class="content">
                    BMI: {{analytics.bmi}}
                </div>
            </h2>
        </div>
      <div class="statistic">
            <h2 class="ui header">
                <i class="big user md icon"></i>
                <div class="content">
                    Category:
                    <div class="sub header">{{analytics.bmicategory}}</div>
                </div>
            </h2>
        </div>
              <div class="statistic">
            <h2 class="ui header">
                Ideal Weight:
                <div class="content">
                  {{#if analytics.isidealbodyweight}}
                  <i class="green check icon"></i>
                  {{else}}
                  <i class="red check icon"></i>
                  {{/if}}
              </div>
            </h2>
        </div>
  </div>
</section>