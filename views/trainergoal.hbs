{{> trainermenu id =""}}

<form class="ui segment form" action="/trainerdashboard/setgoal" method="POST">
  <div class="four fields">
    <div class ="field">
      <label>Date</label>
      <div class="ui calendar" id="date_calendar">
        <div class="ui input left icon">
          <i class="calendar icon"></i>
          <input placeholder="Date" type="text" name="date">
        </div>
      </div>
    </div>
    <div class="field">
      <label>Weight</label>
      <input placeholder="00.00kg" type="number" step="0.01" name="weight">
    </div>
    <div class="field">
      <label>Chest</label>
      <input placeholder="00.00cm" type="number" step="0.01" name="chest">
    </div>
    <div class="field">
      <label>Thigh</label>
      <input placeholder="00.00cm" type="number" step="0.01" name="thigh">
    </div>
  </div>
  <div class="three fields">
    <div class="field">
      <label>Upper Arm</label>
      <input placeholder="00.00cm" type="number" step="0.01" name="upperarm">
    </div>
    <div class="field">
      <label>Waist</label>
      <input placeholder="00.00cm" type="number" step="0.01" name="waist">
    </div>
    <div class="field">
      <label>Hips</label>
      <input placeholder="00.00cm" type="number" step="0.01" name="hips">
    </div>
  </div>
  <button class="ui blue submit button"> Set Goal </button>
</form>

<script>
$('#date_calendar')
  .calendar({
    type: 'date'
  })
;
</script>